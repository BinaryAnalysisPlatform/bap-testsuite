set test "improper_feed"

proc touch {data} {
    set file [exec mktemp]
    if {[string length $data] != 0} {
        exec echo $data > $file
    }
    return $file
}

set files {
  "empty file"    ""
  "random data"   "Hello, world"
  "truncated elf" "\x7f\x45\x4c\x46\x02\x01\x01"
}

foreach {msg data} $files {
    set file [touch $data]
    spawn bap $file -d
    set status [lindex [wait] 3]
    if {$status != 0} {
        expect {
            "Failed to create a project" {pass "$test for $msg"}
            default {fail "no diagnostic/wrong messages in $test for $msg"}
        }
    } else {fail "unexpected zero exit status in $test for $msg"}
    exec rm $file
}
